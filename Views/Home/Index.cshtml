@{
    ViewData["Title"] = "Your Family Tree";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Tree Manager</title>
    <style>
        body {
            padding-top: 70px;
        }
        #treeContainer {
            height: 80vh;
            border: 1px solid #ddd;
            overflow: auto;
        }
        .sidebar-btn {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/img/logo.jpg" width="40" height="40" class="d-inline-block align-text-top me-2" />
                Family Tree
            </a>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container-fluid">
        <div class="row">

            <!-- Left Sidebar -->
            <div class="col-md-3 p-3 border-end">
                <h5>Actions</h5>
                <div class="d-grid gap-2">
                    <button class="btn btn-success sidebar-btn" 
                            onclick="showTab('addParents')" 
                            type="button">Add Parents</button>
                    <button class="btn btn-info sidebar-btn" 
                            onclick="showTab('addChild')" 
                            type="button">Add Child</button>
                    <button class="btn btn-warning sidebar-btn" 
                            onclick="showTab('editPerson')" 
                            type="button">Edit Person</button>
                    <button class="btn btn-danger sidebar-btn" 
                            onclick="showTab('deleteTab')" 
                            type="button">Delete Person</button>
                </div>

                <!-- Tabs Content -->
                <div class="tab-content mt-3">

                    <!-- Add Parents Tab -->
                    <div class="tab-pane fade" id="addParents">
                        <h6>Add Parents</h6>
                        <form id="addParentForm">
                            <div class="mb-2">
                                <label>Fathers' Name</label>
                                <input type="text" name="Name" class="form-control" required />
                            </div>
                            <div class="mb-2">
                                <label>Mothers' Name</label>
                                <input type="text" name="Name" class="form-control" required />
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-sm w-100">Add</button>
                        </form>
                    </div>

                    <!-- Add Child Tab -->
                    <div class="tab-pane fade" id="addChild">
                        <h6>Add Child</h6>
                        <form id="addChildForm">
                            <div class="mb-2">
                                <label>Name</label>
                                <input type="text" name="Name" class="form-control" required />
                            </div>
                            <div class="mb-2">
                                <label>Gender</label>
                                <select name="Gender" class="form-select">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Prefer not to say</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100">Add</button>
                        </form>
                    </div>

                    <!-- Edit Person Tab -->
                    <div class="tab-pane fade" id="editPerson">
                        <h6>Edit Person</h6>
                        <form id="editPersonForm">
                            <div class="mb-2">
                                <label>Name</label>
                                <input type="text" name="Name" class="form-control" required />
                            </div>
                            <div class="mb-2">
                                <label>Gender</label>
                                <select name="Gender" class="form-select">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Prefer not to say</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100">Add</button>
                        </form>
                    </div>

                    <!-- Delete Person Tab -->
                    <div class="tab-pane fade" id="deleteTab">
                        <h6>Delete Person</h6>
                        <p>Select a person on the tree to delete</p>
                    </div>

                </div> <!-- End Tab Content -->
            </div> <!-- End Left Sidebar -->

            <!-- Right Tree Container -->
            <div class="col-md-9 p-3">
                <h5>Family Tree</h5>
                <div id="treeContainer"></div>
            </div>

        </div> <!-- End Row -->
    </div> <!-- End Container -->

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new DataLoader("@Url.Action("GetAll", "Home")").initialize();
        })
    </script>

    <script>
    // Pure JavaScript tab system – no Bootstrap JS needed → no "Illegal invocation" ever
    document.addEventListener("DOMContentLoaded", function () {

        // Manual tab switching
        const tabButtons = document.querySelectorAll('.sidebar-btn');
        const tabPanes   = document.querySelectorAll('.tab-pane');

        function showTab(tabId) {
            // Remove active classes from all
            tabButtons.forEach(btn => btn.classList.remove('active'));
            tabPanes.forEach(pane => {
                pane.classList.remove('show', 'active');
            });

            // Add active to clicked button and target pane
            const activeButton = document.querySelector(`.sidebar-btn[onclick="showTab('${tabId}')"]`);
            const activePane   = document.getElementById(tabId);

            if (activeButton) activeButton.classList.add('active');
            if (activePane) {
                activePane.classList.add('show', 'active');
            }
        }

        // Make the function global so onclick works
        window.showTab = showTab;

        // Optional: open first tab on load
        showTab('addParents');

        // === 2. Initialize the Family Tree ===
        new DataLoader("@Url.Action("GetAll", "Home")").initialize();
    });
</script>
</body>

</html>
